<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SuperDartBrosApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SuperDartBrosApp.Views"
        mc:Ignorable="d" d:DesignWidth="1024" d:DesignHeight="600"
        x:Class="SuperDartBrosApp.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SuperDartBrosApp">
	<StackPanel VerticalAlignment="Center">
		<Label Content="Super Dart Bros" HorizontalAlignment="Center" FontSize="24"/>
		<Label Content="Willkommen zum Super Dart Bros DartzÃ¤hler!" HorizontalAlignment="Center"/>
		<Label Content="Bitte geben Sie die Spielernamen ein, um das Spiel zu beginnen." HorizontalAlignment="Center"/>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Label Margin="10,3,0,0" Content="Spieler 1:"/>
			<TextBox x:Name="TBPlayer1" Text="Spieler 1" Width="150"/>
		</StackPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<Label Margin="10,3,0,0" Content="Spieler 2:"/>
			<TextBox x:Name="TBPlayer2" Text="Spieler 2" Width="150"/>
		</StackPanel>
		<Button x:Name="BtnStart" Click="BtnStart_Click" Margin="0,10,0,0" Content="Spiel starten!" HorizontalAlignment="Center"/>
	</StackPanel>
</Window>
